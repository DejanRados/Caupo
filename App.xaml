<Application x:Class="Caupo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
            xmlns:local="clr-namespace:Caupo.Helpers"
                 xmlns:svg="http://sharpvectors.codeplex.com/svgc/" 
             StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>


            <Color x:Key="PrimaryButtonColor">#FF2FA4A9</Color>
            <Color x:Key="PrimaryButtonHoverColor">#FF35B5BA</Color>
            <Color x:Key="PrimaryButtonPressedColor">#FF279297</Color>

            <SolidColorBrush x:Key="PrimaryButtonBrush"
                 Color="{StaticResource PrimaryButtonColor}" />

            <SolidColorBrush x:Key="PrimaryButtonHoverBrush"
                 Color="{StaticResource PrimaryButtonHoverColor}" />

            <SolidColorBrush x:Key="PrimaryButtonPressedBrush"
                 Color="{StaticResource PrimaryButtonPressedColor}" />


            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background"
            Value="{StaticResource PrimaryButtonBrush}" />
                <Setter Property="Foreground"
            Value="White" />
                <Setter Property="BorderThickness"
            Value="0" />
                <Setter Property="Padding"
            Value="16,8" />
                <Setter Property="FontSize"
            Value="14" />
                <Setter Property="FontWeight"
            Value="SemiBold" />
                <Setter Property="Cursor"
            Value="Hand" />
                <Setter Property="FocusVisualStyle"
            Value="{x:Null}" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6">
                                <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                            </Border>

                            <ControlTemplate.Triggers>

                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root"
                                Property="Background"
                                Value="{StaticResource PrimaryButtonHoverBrush}" />
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root"
                                Property="Background"
                                Value="{StaticResource PrimaryButtonPressedBrush}" />
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.45"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            


            <Style x:Key="CategoryToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Foreground" Value="#2FA4A9"/>
                <Setter Property="Background" Value="Transparent"/>
                <!-- neutralno za obje pozadine -->
                <Setter Property="BorderBrush" Value="#2FA4A9"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#1A2FA4A9"/>
                                    <!-- suptilan overlay -->
                                </Trigger>

                                <!-- Checked / Active -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#2FA4A9"/>
                                    <Setter Property="Foreground" Value="#2D2D30"/>
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style x:Key="ArticleButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="#2FA4A9"/>
                <Setter Property="Background" Value="#442FA4A9"/>
                <Setter Property="BorderBrush" Value="#2FA4A9"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#1A2FA4A9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#2FA4A9"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="local:TableButton" x:Key="TableButtonStyle">

                <Setter Property="Foreground" Value="#2D2D30"/>
                <!-- tamni font -->
                <Setter Property="Background" Value="#cdcdcd"/>
                <!-- svijetla neutralna pozadina -->
                <Setter Property="BorderBrush" Value="#28A745"/>
                <!-- moderna zelena -->
                <Setter Property="BorderThickness" Value="8"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:TableButton}">
                            <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <!-- Naziv stola -->
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=TableName}" 
                           FontSize="14" FontWeight="Normal" TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="5"
                           HorizontalAlignment="Center"/>

                                    <!-- Konobar i total -->
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Waiter}" 
                                   FontSize="12" FontWeight="Normal" TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="5"
                                   HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Total}" 
                                   FontSize="12" FontWeight="Normal" 
                                   HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Triggers za hover / pressed -->
                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#E0E0E0"/>
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="#D0D0D0"/>
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SecondaryButtonStyle"       TargetType="Button">

                <!-- TOUCH -->
              
                <Setter Property="MinWidth" Value="80"/>
                <Setter Property="Padding" Value="16,8"/>

                <!-- BOJE -->
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="#774A6FA5"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Foreground" Value="#4A6FA5"/>

                <!-- TIPOGRAFIJA -->
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>

                <!-- UX -->
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>

                <!-- TEMPLATE -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">

                                <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                            </Border>

                            <ControlTemplate.Triggers>

                                <!-- HOVER -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                Value="#154A6FA5"/>
                                </Trigger>

                                <!-- PRESS -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                Value="#254A6FA5"/>
                                    <Setter TargetName="border" Property="BorderBrush"
                                Value="#3F5E8C"/>
                                </Trigger>

                                <!-- DISABLED -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.45"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style x:Key="CancelButtonStyle" TargetType="Button">
                <Setter Property="Background"   Value="Transparent" />
                <Setter Property="Foreground"  Value="#6c757d" />
                 <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="#6c757d"/>
                <Setter Property="Padding"  Value="16,8" />
                  <Setter Property="FontSize"   Value="14" />
                  <Setter Property="FontWeight"   Value="SemiBold" />
                  <Setter Property="Cursor"   Value="Hand" />
                  <Setter Property="FocusVisualStyle"  Value="{x:Null}" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                                <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"/>
                            </Border>

                            <ControlTemplate.Triggers>

                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#666c757d" />
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root"
                                    Property="Background"
                                    Value="#6c757d"/>
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.45"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <SolidColorBrush x:Key="GlobalFontColor" Color="#323232" />
            <SolidColorBrush x:Key="GlobalBackgroundColor" Color="#F5F5F5" />

            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}" />
            </Style>

          

            <!-- Stil za TextBox -->
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}" />
                <Setter Property="CaretBrush" Value="{DynamicResource GlobalFontColor}" />
            </Style>

            <!-- Globalni stil za TextBox -->
            <Style x:Key="TextBoxCustom" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}" />
                <Setter Property="BorderBrush" Value="{DynamicResource GlobalFontColor}" />
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="CaretBrush" Value="{DynamicResource GlobalFontColor}" />
                <Setter Property="Padding" Value="4"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="true">
                                    <Setter Property="Foreground" Value="#016677"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="WideVerticalScrollBar" TargetType="{x:Type ScrollBar}">
                <Setter Property="Width" Value="40"/>
               
                <Setter Property="BorderBrush" Value="#22000000"/>
                <Setter Property="Background" Value="#22dadada"/>
                <Setter Property="MinWidth" Value="40"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid Background="{TemplateBinding Background}">
                                <Track Name="PART_Track" 
                           IsDirectionReversed="true" 
                           Focusable="False">
                                  
                                    <Track.Thumb>
                                        <Thumb Background="{DynamicResource GlobalFontColor}" BorderThickness="0" />
                                        <!-- Ovdje postavljaš boju Thumb-a -->
                                    </Track.Thumb>
                                   
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <!-- Horizontalni scrollbar potpuno sakriti -->
                    <Trigger Property="Orientation" Value="Horizontal">
                        <Setter Property="Height" Value="0"/>
                        <Setter Property="Opacity" Value="0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}"/>
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid x:Name="MainGrid">
                                <Border x:Name="Border"
                            Background="Transparent"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="{TemplateBinding Padding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ContentPresenter -->
                                        <ContentPresenter x:Name="ContentSite" 
                                              Grid.Column="0"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              VerticalAlignment="Center"/>

                                        <!-- ToggleButton -->
                                        <ToggleButton x:Name="ToggleButton"
                                         Background="Transparent"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                        Focusable="False"
                                          ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"    BorderBrush="{TemplateBinding BorderBrush}"     BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Right"     VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>

                                            <!-- Strelica ostaje desno -->
                                            <Path Fill="{DynamicResource GlobalFontColor}"    VerticalAlignment="Center"  HorizontalAlignment="Right"  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </ToggleButton>
                                    </Grid>
                                </Border>

                                <!-- Popup -->
                                <Popup x:Name="Popup"
                                       Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=Border}"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       PopupAnimation="Fade"
                                        MinWidth="300" 
                                       Focusable="False"
                                       StaysOpen="False">
                                           <Border x:Name="DropDownBorder"
                                            Background="Transparent"
                                            BorderThickness="0,0,0,1"
                                            
                                            CornerRadius="2">   
                                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                                 HorizontalScrollBarVisibility="Disabled"
                                                                 CanContentScroll="True">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="ScrollBar"     BasedOn="{StaticResource WideVerticalScrollBar}"/>
                                            </ScrollViewer.Resources>

                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#323232"/>
                                </Trigger>
                                <Trigger Property="IsDropDownOpen" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#FF32ff32"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!-- ItemContainerStyle -->
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#ef323232"/>
                            <Setter Property="Foreground" Value="#F5F5F5"/>
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="BorderBrush" Value="#121212"/>
                            <Setter Property="Padding" Value="6,2"/>
                            <Setter Property="MinHeight" Value="45"/>
                            <Setter Property="MinWidth" Value="350"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Left" 
                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#2AB1A5"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2AB1A5"/>
                                                <Setter Property="Foreground" Value="#323232"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>



            <Style TargetType="ListBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}"/>
                <Setter Property="Padding" Value="5,2"/>
                <Setter Property="BorderBrush" Value="#323232"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBox">
                            <Border x:Name="Border"
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="{TemplateBinding Padding}">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Items -->
                                    <ScrollViewer Grid.Column="0"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter/>
                                    </ScrollViewer>

                                    <!-- Strelica (vizuelna) -->
                                    <Path Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Fill="{DynamicResource GlobalFontColor}"
                              Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#323232"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <!-- ItemContainerStyle -->
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="#ef323232"/>
                            <Setter Property="Foreground" Value="#F5F5F5"/>
                            <Setter Property="BorderBrush" Value="#121212"/>
                            <Setter Property="Padding" Value="6,2"/>
                            <Setter Property="MinHeight" Value="45"/>
                            <Setter Property="MinWidth" Value="350"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#66cc66"/>
                                                <Setter Property="Foreground" Value="#323232"/>
                                            </Trigger>

                                            <!-- Selected -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FF32ff32"/>
                                                <Setter Property="Foreground" Value="#323232"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>


            <!-- === GRIDVIEW HEADER GRIPPER ===  -->
            <Style x:Key="GridViewColumnHeaderGripper" TargetType="{x:Type Thumb}">
                <Setter Property="Canvas.Right" Value="-9" />
                <Setter Property="Width" Value="18" />
                <Setter Property="Height" Value="{Binding Path=ActualHeight,RelativeSource={RelativeSource TemplatedParent}}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                <Rectangle HorizontalAlignment="Center" Width="1" Fill="{TemplateBinding Background}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            
            <Style x:Key="SidebarBtn" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Ikona -->
                                    <TextBlock Text="{TemplateBinding Tag}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="20"
                                           Margin="5 0"/>
                                    <!-- Tekst dugmeta -->
                                    <TextBlock x:Name="BtnText"
                                           Text="{TemplateBinding Content}"
                                           Margin="10 0 0 0"
                                           VerticalAlignment="Center"
                                          />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#57606F"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

           
            <!-- === GRIDVIEW COLUMN HEADER ===  -->
            <Style TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Height" Value="50"/>
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Background" Value="#BB323232" />
                <Setter Property="BorderBrush" Value="#BB323232" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="2,0,2,0" />
                <Setter Property="Foreground" Value="#dbdbdb"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                            <Grid SnapsToDevicePixels="true">
                                <Border Name="HeaderBorder"
                                        BorderThickness="0,0,0,0.5"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition MaxHeight="7" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Rectangle Name="UpperHighlight"
                                                   Visibility="Collapsed"
                                                   Fill="#FF898d8f" />
                                        <Border Grid.RowSpan="2"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter Name="HeaderContent"
                                                              Margin="0,0,0,1"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              RecognizesAccessKey="True"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </Grid>
                                </Border>
                                <Border Name="HeaderHoverBorder"
