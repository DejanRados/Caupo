            <Style  TargetType="DatePicker">
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}"/>
                <Setter Property="MinHeight" Value="50"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DatePicker">
                            <Border x:Name="border"   BorderBrush="{TemplateBinding BorderBrush}"   BorderThickness="{TemplateBinding BorderThickness}"   Background="Transparent"      SnapsToDevicePixels="True">
                                <Grid x:Name="root" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TextBox part - ostaje potpuno originalan -->
                                    <DatePickerTextBox x:Name="PART_TextBox2" Padding="2"   HorizontalAlignment="Left" Foreground="{DynamicResource GlobalFontColor}"    Grid.Column="0"  Focusable="True"/>

                                    <!-- Button part - originalan ali bez hover efekata -->
                                    <Button x:Name="PART_Button"    Grid.Column="1" Focusable="False"    Grid.ColumnSpan="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="buttonBorder"  Background="Transparent"  BorderBrush="Transparent"   BorderThickness="1"    SnapsToDevicePixels="True">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" >
                                                        <ContentPresenter.Content>
                                                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" >
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="8*"/>
                                                                    <ColumnDefinition Width="2*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <DatePickerTextBox x:Name="PART_TextBox" Grid.Column="0" Margin="5" Padding="1" VerticalContentAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource GlobalFontColor}"     Focusable="False"/>
                                                                <TextBlock Grid.Column="1" Grid.ColumnSpan="2" FontFamily="Segoe MDL2 Assets" Margin="5" TextAlignment="Left"  Text="&#xE787;" FontSize="20" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center"   VerticalAlignment="Center"  />
                                                                    

                                                               
                                                                
                                                            </Grid>
                                                        </ContentPresenter.Content>
                                                    </ContentPresenter>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!-- Uklanjanje hover efekata -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="buttonBorder" Property="Background" Value="Transparent"/>
                                                        <Setter TargetName="buttonBorder" Property="BorderBrush" Value="Transparent"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="buttonBorder" Property="Background" Value="Transparent"/>
                                                        <Setter TargetName="buttonBorder" Property="BorderBrush" Value="Transparent"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Popup x:Name="PART_Popup" Placement="Bottom" AllowsTransparency="True" Focusable="False" StaysOpen="False" Width="400" Height="400">
                                      
                                          
                                       
                                    </Popup>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


