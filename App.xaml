            </Style>

            <Style x:Key="CButton" TargetType="Button">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Background" Value="#7B1E3B"/>
                <Setter Property="Foreground" Value="{DynamicResource GlobalFontColor}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0.5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="FontSize">
                    <Setter.Value>
                        <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}" ConverterParameter="0.4">
                            <Binding.Converter>
                                <local:MultiplyConverter/>
                            </Binding.Converter>
                        </Binding>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" >
                                <Border.CornerRadius>
                                    <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}"/>
                                </Border.CornerRadius>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                     
                        <Setter Property="Background" Value="#bb7B1E3B"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="#373737"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

