<Window x:Class="Caupo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:vm="clr-namespace:Caupo.ViewModels"
        Title="MainWindow" Height="760" Width="1360">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <ContentControl x:Name="MainContent" Content="{Binding CurrentPage}" />
        <ContentControl x:Name="KeyboardHost"  HorizontalAlignment="Stretch" Background="AliceBlue"   VerticalAlignment="Bottom"     Visibility="Collapsed"/>
    </Grid>

</Window>
