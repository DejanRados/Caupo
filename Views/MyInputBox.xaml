<Window x:Class="Caupo.Views.MyInputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Caupo.Views"
        xmlns:loc="clr-namespace:Caupo"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        Background="#77323232"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"   >
    <Grid >
        <Border BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0.5" Background="{DynamicResource GlobalBackgroundColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200" CornerRadius="10">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Foreground="{DynamicResource GlobalFontColor}" Margin="15" FontSize="45"  FontWeight="ExtraLight" Text="&#xEA74;"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBlock x:Name="InputTitle" Foreground="{DynamicResource GlobalFontColor}" Text="Input Title" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" TextAlignment="Center" Grid.Row="0" TextWrapping="WrapWithOverflow" Width="250"/>
        <TextBox x:Name="InputText" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" PreviewMouseLeftButtonDown="InputText_PreviewMouseLeftButtonDown"  BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0,0,0,1" Foreground="{DynamicResource GlobalFontColor}" CaretBrush="{DynamicResource GlobalFontColor}" Text="" HorizontalAlignment="Stretch" Height="30" Width="150" TextWrapping="Wrap" Background="Transparent"     TextAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Margin="20"  />
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                    <Viewbox Stretch="Uniform" MinWidth="100" MaxWidth="160" Margin="2" Grid.Column="0">
                        <Button Style="{StaticResource MyButtonStyle}"  Background="#912121" BorderThickness="0" x:Name="CancelButton"  Click="CancelButton_Click"   Width="100"  Margin="5"  Height="40"   Foreground="{DynamicResource GlobalFontColor}"      Grid.Column="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#60039;" Foreground="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="Odustani"  VerticalAlignment="Center"  Foreground="#F5F5F5" />
                            </StackPanel>
                        </Button>
                    </Viewbox>
                    <Viewbox Stretch="Uniform" MinWidth="100" MaxWidth="160" Margin="2" Grid.Column="1">
                        <Button  Style="{StaticResource MyButtonStyle}"  Background="#219124" BorderThickness="0"  x:Name="OKButton"  Click="OKButton_Click"  Width="100" Margin="5"   Height="40"   Foreground="{DynamicResource GlobalFontColor}"       Grid.Column="1" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#xEAB2;" Foreground="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="U redu"  VerticalAlignment="Center"  Foreground="#F5F5F5" />
                            </StackPanel>
                        </Button>
                    </Viewbox>
                </StackPanel>

            </Grid>
    </Border>
        <ContentControl x:Name="KeyboardHost"  HorizontalAlignment="Stretch" Background="AliceBlue"   VerticalAlignment="Bottom"      Visibility="Collapsed" Margin="5"/>
    </Grid>
</Window>
