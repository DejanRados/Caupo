<UserControl x:Class="Caupo.Views.LicenseActivationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="400" Width="500"     >

    <Grid x:Name="MainGrid" Margin="20">
        <StackPanel>
            <TextBlock Text="CAUPO - Online aktivacija licence" 
                       FontSize="24" FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Unesite Vaš licencni ključ:" 
                       FontSize="14" Margin="0,0,0,5"/>

            <TextBox x:Name="LicenseKeyTextBox" 
                     Height="30" FontSize="16"
                     Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Id:" 
                       FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>

            <TextBox x:Name="FingerprintTextBox" 
                     Height="60" FontSize="10" FontFamily="Consolas"
                     IsReadOnly="True" TextWrapping="Wrap"
                     Padding="5" Margin="0,0,0,20"/>

            <Button x:Name="ActivateButton" 
                    Content="Aktiviraj licencu" 
                    Height="40" FontSize="16" FontWeight="Bold"
                    Background="#007ACC" Foreground="White"
                    Click="ActivateButton_Click"
                    Margin="0,0,0,10"/>

            <Button Content="Nabavi licencni ključ" 
                    Height="30" 
                    Click="GetLicenseButton_Click"
                    Margin="0,0,0,10"/>

            <Button Content="Odustani" 
                    Height="30" 
                    Click="CancelButton_Click"/>

            <ProgressBar x:Name="ActivationProgress" 
                         Height="5" Margin="0,10,0,0"
                         IsIndeterminate="False" Visibility="Collapsed"/>

            <TextBlock x:Name="StatusText" 
                       Margin="0,10,0,0" 
                       Foreground="Gray" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
