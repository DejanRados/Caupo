<UserControl x:Class="Caupo.Views.LicenseActivationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
         Height="450" Width="500"     >

    <Grid x:Name="MainGrid" Margin="20"  >
        <StackPanel>
            <TextBlock Text="CAUPO - Online aktivacija licence"    FontSize="24" FontWeight="Bold"  Background="Transparent"   Margin="0,0,0,20" Foreground="{DynamicResource GlobalFontColor}"/>

            <TextBlock Text="Unesite Vaš licencni ključ:"    FontSize="14" Margin="0,0,0,5" Background="Transparent"  Foreground="{DynamicResource GlobalFontColor}"/>

            <TextBox Style="{DynamicResource TextBoxCustom}" x:Name="LicenseKeyTextBox"     Height="30" FontSize="16"      Padding="5" Margin="0,0,0,15" Foreground="{DynamicResource GlobalFontColor}"/>

            <TextBlock Text="Id:"   FontSize="12" Background="Transparent"  Margin="0,0,0,5" Foreground="{DynamicResource GlobalFontColor}"/>

            <TextBox x:Name="FingerprintTextBox" Style="{DynamicResource TextBoxCustom}" Background="Transparent" Foreground="{DynamicResource GlobalFontColor}"
                     Height="60" FontSize="10" FontFamily="Consolas"
                     IsReadOnly="True" TextWrapping="Wrap"
                     Padding="5" Margin="0,0,0,20"/>

            <Button x:Name="ActivateButton" Style="{StaticResource PrimaryButtonStyle}" 
                    Content="Aktiviraj licencu" Width="200"
                    Height="50" FontSize="16" FontWeight="Bold"
                    
                    Click="ActivateButton_Click"
                    Margin="0,0,0,10"/>

            <Button Content="Nabavi licencni ključ" Style="{StaticResource SecondaryButtonStyle}" Foreground="{DynamicResource GlobalFontColor}"
                    Height="40" Width="200"
                    Click="GetLicenseButton_Click"
                    Margin="0,0,0,10"/>

            <Button Content="Odustani" Style="{StaticResource CancelButtonStyle}" Foreground="{DynamicResource GlobalFontColor}"
                    Height="40" Width="200"
                    Click="CancelButton_Click"/>

            <ProgressBar x:Name="ActivationProgress" 
                         Height="5" Margin="0,10,0,0"
                         IsIndeterminate="False" Visibility="Collapsed"/>

            <TextBlock x:Name="StatusText" 
                       Margin="0,10,0,0" 
                       Foreground="{DynamicResource GlobalFontColor}" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
