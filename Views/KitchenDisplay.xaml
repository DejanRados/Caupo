<Window x:Class="Caupo.Views.KitchenDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views"
         xmlns:vm="clr-namespace:Caupo.ViewModels"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="KitchenDisplay" Height="760" Width="1300">


    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="55" Background="#323232" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="pack://application:,,,/Images/dsoftlogosmall.png" Width="50" Height="50" Grid.Column="0" HorizontalAlignment="Left" Margin="20,0,0,0"/>
            <Label x:Name="lblApp" Content="Caupo - Kuhinja" Foreground="#fafafa" FontSize="25" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
         
        
        </Grid>
        <ScrollViewer Margin="0,60,0,0">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource WideVerticalScrollBar}"/>
            </ScrollViewer.Resources>

            <ItemsControl ItemsSource="{Binding Orders}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource GlobalFontColor}" Background="{Binding Background}" BorderThickness="1" CornerRadius="5" Padding="5" Margin="5" Width="250">
                            <StackPanel MouseLeftButtonUp="Order_Click" Background="Transparent">
                                <TextBlock FontSize="18" Foreground="#f8f8f8">
                                   <Run Text="Broj bloka: "/>
                                   <Run Text="{Binding Number}"/>
                                </TextBlock >
                                <Separator Margin="5"/>
                                <TextBlock Text="{Binding Waiter}" FontWeight="Bold" FontSize="16" Foreground="#f8f8f8"/>
                                <TextBlock Foreground="#f8f8f8">
                        <Run Text="Sto: "/>
                        <Run Text="{Binding TableName}"/>
                                </TextBlock>
                                <TextBlock FontSize="16" Foreground="#f8f8f8">
                                      <Run Text="Naručeno: "/>
                                      <Run Text="{Binding OrderTime, StringFormat={}{0:HH\\:mm\\:ss}}"/>
                                </TextBlock>
                                <TextBlock FontSize="16" Foreground="#f8f8f8">
                                        <Run Text="Proteklo od narudžbe: "/>
                                        <Run FontSize="18" Text="{Binding Elapsed, StringFormat={}{0:mm\\:ss}}"/>
                                </TextBlock>
                                <Separator Margin="5"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Foreground="#f8f8f8" Text="{Binding Quantity}" Margin="0,0,5,5"/>
                                                <TextBlock Foreground="#f8f8f8" Text="x" Margin="0,0,5,5"/>
                                                <TextBlock Foreground="#f8f8f8" Text="{Binding Name}" Margin="0,0,5,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </ScrollViewer>
    </Grid>
</Window>
