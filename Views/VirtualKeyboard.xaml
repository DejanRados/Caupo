<UserControl x:Class="Caupo.Views.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caupo.Views"
             mc:Ignorable="d" 
             IsHitTestVisible="True"
             d:DesignHeight="100" d:DesignWidth="800">
    <Border CornerRadius="20" Padding="3" Background="{DynamicResource GlobalBackgroundColor}" HorizontalAlignment="Center" >
    <WrapPanel Orientation="Vertical" x:Name="KeyboardPanel" Margin="3"   Background="{DynamicResource GlobalBackgroundColor}" HorizontalAlignment="Center"  >
        
        <!-- RED 1 -->
        <UniformGrid Rows="1" Columns="11" Margin="10,5,10,0" HorizontalAlignment="Center" MinWidth="1000">
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}"  Content="1" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="2" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}"  Content="3" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="4" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="5" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="6" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="7" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="8" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="9" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="0" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets" Click="KeyboardButton_Click"/>
        </UniformGrid>
        
        <UniformGrid Rows="1" Columns="13" Margin="10,0" >
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}"  Content="Q" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="W" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}"  Content="E" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="R" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="T" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Y" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="U" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="I" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="O" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="P" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Š" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Đ" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Enter" Click="KeyboardButton_Click"/>
        </UniformGrid>

        <!-- RED 2 -->
        <UniformGrid Rows="1" Columns="12" Margin="10,0">
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="A" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="S" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="D" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="F" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="G" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="H" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="J" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="K" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="L" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Č" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Ć" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Ž" Click="KeyboardButton_Click"/>
        </UniformGrid>

        <!-- RED 3 -->
        <UniformGrid Rows="1" Columns="11" Margin="10,0">
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="&#xE84A;" FontFamily="Segoe MDL2 Assets" Click="ShiftButton_Click"  FontSize="16"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Z" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="X" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="C" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="V" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="B" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="N" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="M" Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="," Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="." Click="KeyboardButton_Click"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="-" Click="KeyboardButton_Click"/>
          
        </UniformGrid>

        <!-- RED 4 – specijalni -->
        <UniformGrid Rows="1" Columns="3" Margin="10,0,0,10">
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Sakrij" Click="KeyboardButton_Click" Width="100" HorizontalAlignment="Left"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="&#xE75D;" Click="KeyboardButton_Click" FontFamily="Segoe MDL2 Assets"/>
            <Button Focusable="False" IsTabStop="False" Margin="2" Foreground="{DynamicResource GlobalFontColor}" Height="45" Style="{StaticResource MyButtonStyle}" Content="Reset" Click="KeyboardButton_Click" Width="100" HorizontalAlignment="Right"/>
        </UniformGrid>
   
    </WrapPanel>
    </Border>
</UserControl>
