<UserControl x:Class="Caupo.Views.DashboardPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        
        xmlns:local="clr-namespace:Caupo.ViewModels"
        xmlns:loc="clr-namespace:Caupo"
         xmlns:syncfusionskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF" xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        Loaded="Window_Loaded"
        
        
        
        mc:Ignorable="d"
        UseLayoutRounding="True"
         >


    <Grid VerticalAlignment="Stretch">
   
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="55" Background="#323232" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="pack://application:,,,/Images/dsoftlogosmall.png" Width="50" Height="50" Grid.Column="0" HorizontalAlignment="Left" Margin="20,0,0,0"/>
            <Label x:Name="lblApp" Content="Caupo  - Izvještaji" Foreground="#fafafa" FontSize="25" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
            <Label x:Name="lblUlogovaniKorisnik" Content="Ime i prezime" Foreground="#fafafa" FontSize="16" Grid.Column="1" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
            <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}"  VerticalAlignment="Top" HorizontalAlignment="Right" Padding="0" Margin="1" Click="CloseButton_Click" Grid.Column="2" />
        </Grid>



            <Grid Margin="0,55,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#323232" Width="270" Padding="1">
                   
                        <StackPanel x:Name="SidebarPanel" Orientation="Vertical" >
                            <!-- Header -->
                            <Border Height="60" Background="#323232" Padding="15">
                                <TextBlock Text="" Foreground="#dbdbdb" 
                                  FontSize="18" FontWeight="Normal"
                                  VerticalAlignment="Center"/>
                            </Border>

                          
                        </StackPanel>
                    
                </Border>

                <!-- Main Content -->
                <Border Grid.Column="1"  Padding="1" VerticalAlignment="Stretch">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                          <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding PrviDatePickerLabel}" Foreground="{DynamicResource GlobalFontColor}" Grid.Row="0" Grid.Column="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <DatePicker   CalendarStyle="{StaticResource styleCalendar}" SelectedDateChanged="DpOdDate_SelectedDateChanged"   x:Name="DpOdDate" Language="bs-BA" Focusable="False" Foreground="{DynamicResource GlobalFontColor}" Grid.Row="1" Grid.Column="0" FontSize="16" Margin="30,0"
                            SelectedDate="{Binding OdDatuma}"
                            DisplayDate="{Binding OdDatuma}"
                            SelectedDateFormat="Short"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            >
                            <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DatePickerTextBox">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                              Background="Transparent"
                                              Focusable="False"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <Binding Path="SelectedDate"
                                     RelativeSource="{RelativeSource AncestorType=DatePicker}"
                                     StringFormat="dd.MM.yyyy"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                      
                        <Label Content="Do datuma: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Visibility="{Binding DrugiDatePickerVisibility}" />
                        <DatePicker Focusable="False" CalendarStyle="{StaticResource styleCalendar}" Language="bs-BA" SelectedDateChanged="DpOdDate_SelectedDateChanged"   x:Name="DpDoDate" FontSize="16" SelectedDate="{Binding DoDatuma, StringFormat=dd.MM.yyyy}" Visibility="{Binding DrugiDatePickerVisibility}"  Grid.Row="1" Grid.Column="1"    BorderThickness="0"  Background="Transparent" Foreground="{DynamicResource GlobalFontColor}"   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DatePickerTextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                     Background="Transparent"
                                                     Focusable="False"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    
                                    <Setter Property="Text">
                                        <Setter.Value>
                                            <Binding Path="SelectedDate" 
                                                  RelativeSource="{RelativeSource AncestorType=DatePicker}"
                                                  StringFormat="dd.MM.yyyy"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>

                             
                            </DatePicker.Resources>
                        </DatePicker>

                        <Label Content="Radnik: " Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" FontSize="16" Visibility="{Binding ComboRadnikVisibility}"/>
                        <ComboBox ItemsSource="{Binding SviRadnici}"   Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"    SelectedItem="{Binding OdabraniRadnik}"    SelectionChanged="ComboBox_SelectionChanged" Visibility="{Binding ComboRadnikVisibility}"   DisplayMemberPath="Radnik" Width="250" FontSize="20" FontWeight="Light" Foreground="{DynamicResource GlobalFontColor}" Grid.Row="1" Grid.Column="2"/>

                        <Button  Grid.Column="3" Grid.RowSpan="2" Style="{StaticResource MyButtonStyle}"  BorderBrush="#32ff32"  x:Name="BtnPrint"    Width="120"    Height="50"  Margin="0,0,20,0"   Click="BtnPrint_Click" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE749;" Foreground="{DynamicResource GlobalFontColor}" Margin="5" FontSize="20"/>
                                <TextBlock Text="Štampaj"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}" Margin="5" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ContentControl Content="{Binding CurrentView}" Grid.Row="1"/>
                </Grid>
            </Border>
            </Grid>






        </Grid>
  
</UserControl>
