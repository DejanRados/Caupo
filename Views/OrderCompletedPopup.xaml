<Window x:Class="Caupo.Views.OrderCompletedPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views"
        AllowsTransparency="True"
       Background="Transparent"
        WindowStyle="None"
       WindowState="Maximized"
        mc:Ignorable="d"
        Title="OrderCompletedPopup" >
    <Border      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#dd3A3A40">


        <Border Width="420" Height="260" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Background="#3A3A40" CornerRadius="7" PreviewMouseLeftButtonUp="Border_PreviewMouseLeftButtonUp">
          
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="240">
                <Label Content="Caupo - Kuhinja" Foreground="{DynamicResource GlobalFontColor}" Margin="10,10,10,50" FontSize="16" Width="165" HorizontalAlignment="Left"/>

                <TextBlock x:Name="MessageTitle"
                           Text="Narudžba završena!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"
                           FontWeight="Normal"
                           Foreground="#F5F5F5"
                           FontSize="12"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="Waiter"
                           Text="Narudžba završena!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"
                           FontWeight="Normal"
                           Foreground="#F5F5F5"
                           FontSize="12"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="TableName" 
                           Text="Narudžba završena!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="5"
                           FontWeight="Normal"
                           Foreground="#F5F5F5"
                           FontSize="12"
                           TextWrapping="Wrap"/>


            </StackPanel>
        </Border>
    </Border   >
</Window>
