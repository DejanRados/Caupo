<Window x:Class="Caupo.Views.OrderCompletedPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views"
        AllowsTransparency="True"
       Background="Transparent"
        WindowStyle="None"
       WindowState="Maximized"
        mc:Ignorable="d"
        Title="OrderCompletedPopup" >
    <Border      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#33000000">


        <Border Width="300" Height="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Background="#a19da3" CornerRadius="7">
            <StackPanel Background="Transparent">
                <Button x:Name="CloseButton" Style="{StaticResource MyButtonStyle}"
                        Content="X" Foreground="{DynamicResource GlobalFontColor}"  BorderThickness="1" BorderBrush="{DynamicResource GlobalFontColor}"
                        VerticalContentAlignment="Center"  FontSize="20"
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        Padding="0" Margin="5" Click="Close_Click" Width="25" Height="25" />
                <Label Content="Caupo - Kuhinja" Foreground="{DynamicResource GlobalFontColor}" Margin="10,-20,0,10" FontSize="16" Width="165" HorizontalAlignment="Left"/>
                <TextBlock x:Name="MessageTitle" Text="Narudžba završena!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"
                FontWeight="Normal" Foreground="{DynamicResource GlobalFontColor}" FontSize="12" TextWrapping="Wrap"/>
                <TextBlock x:Name="Waiter" Text="Narudžba završena!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"
      FontWeight="Normal" Foreground="{DynamicResource GlobalFontColor}" FontSize="12" TextWrapping="Wrap"/>
                <TextBlock x:Name="TableName" Text="Narudžba završena!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"
      FontWeight="Normal" Foreground="{DynamicResource GlobalFontColor}" FontSize="12" TextWrapping="Wrap"/>


            </StackPanel>
        </Border>
    </Border   >
</Window>
