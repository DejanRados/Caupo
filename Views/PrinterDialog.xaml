<Window x:Class="Caupo.Views.PrinterDialog"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        
        mc:Ignorable="d"
        Title="YesNoPopup" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.27*"/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.27*"/>
        </Grid.RowDefinitions>
        <TextBlock FontFamily="Segoe MDL2 Assets"  Margin="25,5" FontSize="32"  FontWeight="ExtraLight" Text="&#xE749;" Width="42" Height="42" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Foreground="{DynamicResource GlobalFontColor}"  />
        <TextBlock x:Name="MessageTitle" Text="Izaberi printer" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" Grid.Row="0" Foreground="{DynamicResource GlobalFontColor}"/>
        <ComboBox x:Name="cmbPrinters" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="300" Height="40"/>
        

      
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button Style="{StaticResource MyButtonStyle}"  BorderBrush="#ff3232" x:Name="CancelButton"  Click="CancelButton_Click"   Width="100"  Margin="5"  Height="40"   Foreground="{DynamicResource GlobalFontColor}"      Grid.Column="0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#60039;" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Odustani"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}" />
                </StackPanel>
            </Button>

            <Button  Style="{StaticResource MyButtonStyle}"  BorderBrush="#32ff32"  x:Name="OKButton"  Click="OKButton_Click"  Width="100" Margin="5"   Height="40"   Foreground="{DynamicResource GlobalFontColor}"      Grid.Column="1" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#xEAB2;" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="U redu"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>