<Window x:Class="Caupo.Views.BeverageInPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Caupo.Views"
        xmlns:loc="clr-namespace:Caupo"
        AllowsTransparency="True"
         Background="Transparent"
         WindowStartupLocation="CenterScreen"
         WindowStyle="None"
         WindowState="Maximized"
        ContentRendered="Window_ContentRendered"
        Loaded="Window_Loaded"
        Title="BeverageInPopup" >
    <Border      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#44000000">
        <Border Background="#3A3A40" CornerRadius="20" Height="400" Width="600">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="Article" Foreground="{DynamicResource GlobalFontColor}" Text="Artikl" HorizontalAlignment="Stretch" Padding="10" FontSize="30" VerticalAlignment="Center" TextAlignment="Left" TextWrapping="WrapWithOverflow" Width="600" Margin="20,0"/>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Foreground="{DynamicResource GlobalFontColor}"  Grid.Row="0" Grid.Column="0" Content="Nabavna cijena bez PDV-a" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
                    <TextBox x:Name="Cijena" KeyDown="TextBox_KeyDown" GotFocus="TextBox_GotFocus" BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0,0,0,1" Foreground="{DynamicResource GlobalFontColor}" CaretBrush="{DynamicResource GlobalFontColor}" Text="" HorizontalAlignment="Stretch" Height="30" Width="150" TextWrapping="Wrap" Background="Transparent"     TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"   />
                    <Label Foreground="{DynamicResource GlobalFontColor}"  Grid.Row="0" Grid.Column="1" Content="Količina" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
                    <TextBox x:Name="Kolicina" KeyDown="TextBox_KeyDown" GotFocus="TextBox_GotFocus"  BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0,0,0,1" Foreground="{DynamicResource GlobalFontColor}" CaretBrush="{DynamicResource GlobalFontColor}" Text="" HorizontalAlignment="Stretch" Height="30" Width="150" TextWrapping="Wrap" Background="Transparent"     TextAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"   />
                    <Label Foreground="{DynamicResource GlobalFontColor}"  Grid.Row="0" Grid.Column="2" Content="Popust" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
                    <TextBox x:Name="Popust" KeyDown="TextBox_KeyDown" GotFocus="TextBox_GotFocus"  BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0,0,0,1" Foreground="{DynamicResource GlobalFontColor}" CaretBrush="{DynamicResource GlobalFontColor}" Text="" HorizontalAlignment="Stretch" Height="30" Width="150" TextWrapping="Wrap" Background="Transparent"     TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1"   />
                </Grid>
                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                    <Button Style="{StaticResource CancelButtonStyle}"   x:Name="CancelButton"  Click="CancelButton_Click"  MaxHeight="60" Margin="5" MinWidth="150"   Foreground="{DynamicResource GlobalFontColor}"      Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                            <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="25" Width="25" FontWeight="ExtraLight" Text="&#60039;" Foreground="{DynamicResource GlobalFontColor}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Odustani"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}"  />
                        </StackPanel>
                    </Button>

                    <Button  Style="{StaticResource PrimaryButtonStyle}"  x:Name="OKButton"  Click="OKButton_Click" MaxHeight="60" MinWidth="150"  Margin="5"    Foreground="{DynamicResource GlobalFontColor}"       Grid.Column="1" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                            <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="25" Width="25" FontWeight="ExtraLight" Text="&#xEB4B;" Foreground="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Spremi"  VerticalAlignment="Center"  Foreground="#F5F5F5" />
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
