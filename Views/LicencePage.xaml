<UserControl x:Class="Caupo.Views.LicencePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views"
        
        Loaded="Window_Loaded"
        mc:Ignorable="d"
         Height="400" Width="600">
  
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Label  Content="Program nije licenciran"   VerticalAlignment="Top"  HorizontalAlignment="Center" Margin="10" FontSize="20" Grid.Row="0" />
        <Label  Content=" Identifikacioni broj aplikacije"   VerticalAlignment="Bottom"  HorizontalAlignment="Center"  FontSize="15" Grid.Row="1" />
        <Label x:Name="lblId" Content="********************"  VerticalAlignment="Top"   HorizontalAlignment="Center" Grid.Row="2" MouseDown="lblId_MouseDown" />
        <Label   Content="Licencni ključ"  VerticalAlignment="Bottom"   HorizontalAlignment="Center" Grid.Row="3" FontSize="15"   />

        <TextBox x:Name="txtKey" Grid.Row="4" BorderThickness="0,0,0,1" PreviewTouchDown="TextBox_TouchDown"  MouseDown="txtKey_MouseDown"  BorderBrush="{DynamicResource GlobalFontColor}" Background="Transparent"  Foreground="{DynamicResource GlobalFontColor}" FontSize="14"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="30"  Width="420"  Margin="0"  />
    
        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center" Height="60">
        <Button x:Name="btnOk"  Content="U redu" Click="btnOk_Click" Width="100" Margin="5" Style="{StaticResource OkButton}" HorizontalAlignment="Right"/>
        <Button x:Name="btnCancel"   Content="Odustani" Click="btnCancel_Click" Width="100" Margin="5" Style="{StaticResource CButton}" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</UserControl>
