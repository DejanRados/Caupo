<Window x:Class="Caupo.Views.SizeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caupo.Views"
         xmlns:loc="clr-namespace:Caupo.Helpers"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
         WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        Opacity="0.9"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="{DynamicResource GlobalFontColor}" BorderThickness="0.5" Background="{DynamicResource GlobalBackgroundColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="300" CornerRadius="10">
            <Grid >
                <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.32*"/>
        </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Row="0"  Grid.Column="0" FontFamily="Segoe MDL2 Assets"  FontSize="26" Width="30" Margin="20,5" FontWeight="ExtraLight" Text="&#xE744;" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  x:Name="SizeInputTitle" Text="NOVE DIMENZIJE STOLA" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Širina" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
                    <TextBox Grid.Row="2" Grid.Column="0" x:Name="InputTextWidth" HorizontalAlignment="Right" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" PreviewMouseLeftButtonDown="InputText_PreviewMouseLeftButtonDown"  Text=""  Height="30" Width="100" TextWrapping="Wrap" Background="Transparent"  BorderThickness="0,0,0,1"   TextAlignment="Left" VerticalAlignment="Top"  Padding="2"  />

                    <Label Grid.Row="1" Grid.Column="3" Content="Visina" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    <TextBox Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left" x:Name="InputTextHeight" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" PreviewMouseLeftButtonDown="InputText_PreviewMouseLeftButtonDown"  Text=""  Height="30" Width="100" TextWrapping="Wrap" Background="Transparent"  BorderThickness="0,0,0,1"     TextAlignment="Left" VerticalAlignment="Top"  Padding="2"  />
                </Grid>
                <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center">
                    <Viewbox Stretch="Uniform" MinWidth="100" MaxWidth="160" Margin="2" Grid.Column="0">
                        <Button Style="{StaticResource CancelButtonStyle}"  BorderBrush="#ff3232" x:Name="CancelButton"  Click="CancelButton_Click"   Width="100"  Margin="5"  Height="40"   Foreground="{DynamicResource GlobalFontColor}"      Grid.Column="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#60039;" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="Odustani"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}"/>
                            </StackPanel>
                        </Button>
                    </Viewbox>
                    <Viewbox Stretch="Uniform" MinWidth="100" MaxWidth="160" Margin="2" Grid.Column="1">
                        <Button  Style="{StaticResource CancelButtonStyle}"  BorderBrush="#32ff32"  x:Name="OKButton"  Click="OKButton_Click"  Width="100" Margin="5"   Height="40"   Foreground="{DynamicResource GlobalFontColor}"       Grid.Column="1" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#codicon" Margin="5" FontSize="20" Width="20" FontWeight="ExtraLight" Text="&#xEAB2;" Foreground="{DynamicResource GlobalFontColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="U redu"  VerticalAlignment="Center"  Foreground="{DynamicResource GlobalFontColor}" />
                            </StackPanel>
                        </Button>
                    </Viewbox>
                </StackPanel>
            </Grid>
           
        </Border>
        <ContentControl x:Name="KeyboardHost"  HorizontalAlignment="Stretch" Background="AliceBlue"   VerticalAlignment="Bottom"      Visibility="Collapsed" Margin="5"/>
    </Grid>
</Window>