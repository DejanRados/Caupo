<UserControl x:Class="Caupo.UserControls.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caupo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="1" BorderBrush="{DynamicResource GlobalFontColor}" CornerRadius="20" Margin="100,20,100,20"  HorizontalAlignment="Center" VerticalAlignment="Top" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="600"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" TextAlignment="Center" Grid.ColumnSpan="2" Foreground="{DynamicResource GlobalFontColor}"
                        Text="{Binding ReportTitle}" 
                        FontSize="20" 
                        FontWeight="Light"
                        Margin="30"/>
            <Grid Margin="50,0,50,0" Grid.Row="1" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <Label Content="Gotovina: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="1" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding PrometKes}" ContentStringFormat="{}{0:F2}" Grid.Row="1" Grid.Column="1" FontSize="16" Foreground="{DynamicResource GlobalFontColor}" HorizontalContentAlignment="Right"/>
                <Label Content="Kartica: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="2" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding PrometKartica}" ContentStringFormat="{}{0:F2}" Grid.Row="2" Grid.Column="1" FontSize="16" Foreground="{DynamicResource GlobalFontColor}" HorizontalContentAlignment="Right"/>
                <Label Content="Ček: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="3" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding PrometCek}" ContentStringFormat="{}{0:F2}" Grid.Row="3" Grid.Column="1" FontSize="16" Foreground="{DynamicResource GlobalFontColor}" HorizontalContentAlignment="Right"/>
                <Label Content="Virman: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="4" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding PrometVirman}" ContentStringFormat="{}{0:F2}" Grid.Row="4" Grid.Column="1" FontSize="16" Foreground="{DynamicResource GlobalFontColor}" HorizontalContentAlignment="Right"/>

                <Label Content="Ostvareni promet: " Foreground="{DynamicResource GlobalFontColor}" Grid.Row="6" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding UkupanPromet}" ContentStringFormat="{}{0:F2}" FontWeight="Normal" Grid.Row="6" Grid.Column="1" FontSize="16" Foreground="{DynamicResource GlobalFontColor}" HorizontalContentAlignment="Right"/>


                <Label Content="Reklamirani promet: " Foreground="#aa2222" Grid.Row="7" Grid.Column="0" FontSize="16"/>
                <Label Content="{Binding ReklamiraniPromet}" ContentStringFormat="{}{0:F2}"  Foreground="#aa2222" Grid.Row="7" Grid.Column="1" FontSize="16" HorizontalContentAlignment="Right" />

                <Label Content="PAZAR: " Foreground="#22aa22" Grid.Row="10" Grid.Column="0" FontSize="20"/>

                <Label Content="{Binding KonacanPazar}" ContentStringFormat="{}{0:F2}"  FontWeight="Bold"  FontSize="20"   Foreground="#22aa22" Grid.Row="10" Grid.Column="1" HorizontalContentAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
